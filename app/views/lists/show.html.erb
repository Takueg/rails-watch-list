

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.image_url %>);">
  <div class="container">
      <h1 class="text-center"><%= @list.name %></h1>
      <div class="banner-button ">
        <%= link_to "Add movie to list", new_list_bookmark_path(@list), class: "btn btn-ghost text-center" %>
      </div>
  </div>
</div>

<div class="container">

  <div class="cards">
    <% @bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <img src= <%= bookmark.movie.poster_url %> />
        <div class="card-trip-infos">
          <div class="card-trip-title">
            <h2><%= bookmark.movie.title %> â€¢ <%= bookmark.movie.rating %> <i class="fas fa-star"></i></h2>
            <p><%= bookmark.movie.overview %></p>
          </div>
          <h2 class="card-trip-pricing">
          <%= link_to '<i class="far fa-times-circle bookmark-delete-button"></i>'.html_safe, bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure" } %>


          </h2>
        </div>
      </div>
    <% end %>
  </div>

</div>


