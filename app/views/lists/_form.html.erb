<%= simple_form_for(list) do |f| %>
  <%= f.input :name, placeholder: 'List name', label: false, input_html: { class: 'form-control-lg' } %>
  <%= f.input :image_url, placeholder: 'Image URL', label: false, input_html: { class: 'form-control-lg' } %>
  <%= f.submit class: 'btn btn-block btn-lg mt-4 form-button' %>
<% end %>
