<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_url('banner.jpeg') %>);">
  <div class="container">
    <h1 class="text-center"><span id="banner-typed-text"></span></h1>
    <p class="text-center">Keeping track of all the movies I want to watch.</p>
  </div>
</div>

<div class="container">

  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image_url %>)">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>


</div>

